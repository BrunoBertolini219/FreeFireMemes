<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/carditem"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:windowBackground="@color/colorAccent"
    android:elevation="8dp"
    android:background="@color/card_backgroud"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    app:cardCornerRadius="8dp"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_meme_item"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center|top"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:requiresFadingEdge="horizontal"
            android:src="@drawable/add_new_image" />

        <TextView
            android:id="@+id/text_meme_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:padding="4dp"
            android:textColor="@color/colorAccent"
            tools:text="Eu Jogo esse Jogo" />

        <TextView
            android:id="@+id/sound_meme_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

